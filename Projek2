
local WindUI = loadstring(game:HttpGet("https://github.com/Footagesus/WindUI/releases/latest/download/main.lua"))()
local Window = WindUI:CreateWindow({
    Title = "My Super Hub",
    Icon = "door-open", -- lucide icon. optional
    Author = "by .ftgs and .ftgs", -- optional

local InfoTab = Window:Tab({
    Title = "Tab Title",
    Icon = "lucide:info", -- optional
    Locked = false,
})

local discordInvite = "https://discord.gg/INVITE_KAMU"

local Paragraph = InfoTab:Paragraph({
    Title = "ZYQRIN DISCORD",
    Desc = "Join Discord untuk info & update script",
    Color = "Blue",
    Buttons = {
        {
            Icon = "lucide:copy",
            Title = "Join Discord",
            Callback = function()
                if setclipboard then
                    setclipboard(discordInvite)
                end

                game:GetService("StarterGui"):SetCore("SendNotification", {
                    Title = "Discord",
                    Text = "Link Discord disalin ke clipboard!",
                    Duration = 5
                })
            end,
        }
    }
})

-- Buat Tab Camera
local Tab = Window:Tab({
    Title = "Camera",
    Icon = "camera",
})

-- Buat Section Zoom Toggle
local Section = Tab:Section({
    Title = "Zoom Toggle"
})

-- Default dan Max Zoom
local player = game.Players.LocalPlayer
local DefaultZoom = 128
local MaxZoom = 5000

-- Toggle Zoom Jauh
local Toggle = Section:Toggle({
    Title = "Zoom Jauh",
    Desc = "Aktifkan untuk Zoom sangat jauh",
    Icon = "bird",
    Type = "Checkbox",
    Value = false, -- default value
    Callback = function(state)
        if state then
            player.CameraMaxZoomDistance = MaxZoom
            player.CameraMinZoomDistance = 0
            player.CameraMode = Enum.CameraType.Custom -- pastikan Custom
        else
            player.CameraMaxZoomDistance = DefaultZoom
            player.CameraMinZoomDistance = 0
            player.CameraMode = Enum.CameraType.Custom
        end
        print("Zoom Toggle Activated: " .. tostring(state))
    end
})

-- Contoh update judul Section
Section:SetTitle("Zoom Jauh Toggle")
